
<%= form_tag("/wiki_scrape", id:"article-topic") do %>
  <%= label_tag(:topic, "Search for:") %>
  <%= text_field_tag(:topic) %>
  <%= submit_tag("Search") %>
<% end %>
<br>	

<div id="result">
</div>

<br>


<div class="row">
  <%  NprApi.new("Russia").stories_array.each do |story| %>
    <div class="col-xs-6 col-md-3">
      <a href="<%=story["link"].first["$text"]%>" class="thumbnail">
        <% unless story["thumbnail"].nil? %>
          <img src="<%=story["thumbnail"]["medium"]["$text"]%>" alt="...">
        <% end %>
      </a>
    </div><br>
  <% end %>
</div>  


