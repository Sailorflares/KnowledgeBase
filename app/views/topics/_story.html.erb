<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">
      <a href="<%=story["link"]%>">  
        <%=story["title"]%>    
      </a>
    </h3>
  </div>
  <div class="panel-body">
    <div class="image">
      <img class="center-block" src="<%=story["img_src"]%>" alt="<%=story["title"]%>">
    </div>
  </div>
  <div class="panel-heading">
    <div class="panel-title center-block">
      <div class="btn-group" role="group">
        <%= submit_tag "UP", :class => "btn btn-default up-btn greenbtn", :train => "#{story['title']}", :topic => "#{@topic}" %>
        <%= submit_tag "DOWN", :class => "btn btn-default down-btn greenbtn", :train => "#{story['title']}", :topic => "#{@topic}" %>
      </div>
    </div>   
  </div>
</div>